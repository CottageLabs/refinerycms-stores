<% content_for :body_content_title do %>
  <%= @product.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @product.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @product.description %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @product.image, nil %>
    </p>
  </section>
  <section>
    <h1>File</h1>
    <p>
      <% if @product.file.present? %>
        <%= link_to 'file', @product.file.url %>
      <% else %>
        file
      <% end %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="products">
      <% @products.each do |product| %>
        <li>
          <%= link_to product.title, refinery.stores_product_path(product) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
