<%= render :partial => '/refinery/stores/admin/submenu' %>
<div id='records'>
  <% if searching? %>
    <h2><%= t('results_for', :scope => 'refinery.admin.search', :query => params[:search]) %></h2>
    <% if @products.any? %>
    <ul>
      <%= render :partial => "product", :collection => @products %>
    </ul>
    <% else %>
      <p><%= t('no_results', :scope => 'refinery.admin.search') %></p>
    <% end %>
  <% else %>
    <% if @products.any? %>
      <%= will_paginate @products %>

      <%= render :partial => "sortable_list" %>

      <%= will_paginate @products %>
    <% else %>
      <p>
        <strong>
          <%= t('.no_items_yet', :create => t('new', :scope => 'refinery.stores.admin.submenu.products')) %>
        </strong>
      </p>
    <% end %>
  <% end %>
</div>
